<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="vn.edu.taipp64132083.quanlydoantotnghiep.controller.XemChiTietSinhVienController">

    <center>
        <VBox spacing="15" style="-fx-padding: 20;" alignment="CENTER">
        <Label text="Thông Tin Chi Tiết Sinh Viên" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10" alignment="CENTER" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints percentWidth="40"/>
                    <ColumnConstraints percentWidth="60"/>
                </columnConstraints>

                <!-- Họ tên -->
                <Label text="Họ tên:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="lblHoTen" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- Ngày sinh -->
                <Label text="Ngày sinh:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="lblNgaySinh" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Giới tính -->
                <Label text="Giới tính:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="lblGioiTinh" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- Email -->
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label fx:id="lblEmail" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <!-- Số điện thoại -->
                <Label text="Số điện thoại:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <Label fx:id="lblSDT" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- Trạng thái -->
                <Label text="Trạng thái:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <Label fx:id="lblTrangThai" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <!-- Mã lớp -->
                <Label text="Mã lớp:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <Label fx:id="lblMaLop" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" style="-fx-padding: 10;" alignment="CENTER" >
            <Button text="Đóng" fx:id="btnClose"/>
        </HBox>
    </bottom>
</BorderPane>
